<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->
    <item >

        <shape android:shape="rectangle">
            <corners
                android:radius="100dp"/>
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="2px" android:right="2px" android:top="2px" android:left="2px">
        <shape android:shape="rectangle">

            <solid
                android:width="1dp"
                android:color="@color/green_500" >
            </solid>

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" >
            </padding>

            <corners android:radius="4dp"/>

        </shape>
    </item>
</layer-list>